
<h6> <strong> TIME ENTRY DETAILS </strong> </h6>

<table class="table table-bordered regular-details-grid">
    <thead class="thead-details-grid">
        <tr>
            <th style="width:15%">Date</th>
            <th style="width:30%">Client - Project</th>
            <th style="width:10%">Task</th>
            <th style="width:30%">Activity</th>
            <th style="width:10%">Time</th>
            <th style="width:50%">Comments</th>
            <th style="width:20%">Location</th>
        </tr>
    </thead>
    <tbody class="tbody-details-grid">
        @foreach (var item in GridData)
        {
            <tr>
                <td>
                    @item.DateEntry
                </td>
                <td>
                    @item.ClientProject
                </td>
                <td>
                    @item.Task
                </td>
                <td>
                    @item.Activity
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.Comments
                </td>
                <td>
                    @item.Location
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<TimeEntryDetails> GridData { get; set; } = new List<TimeEntryDetails>();
}
